<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Biome</th>
        <th>Threat Level</th>
        <th>Sector</th>
        <th>Description</th>
        <th>Added By</th>
        <th>Added</th>
        <th>X Coord</th>
        <th>Y Coord</th>
        <th>Avg. Rating</th>
        <th>Tags</th>
      </tr>
    </thead>
    <tbody>
      <% @planets.each do |planet| %>
        <tr>
          <td><%= link_to planet.full_name, planet_path(planet)  %></td>
          <td><%= planet.biome %></td>
          <td><%= planet.threat_level %></td>
          <td><%= link_to planet.sector.name, sector_path(planet.sector) %></td>
          <td><%= truncate(planet.description, :length => 50) %></td>
          <td><%= link_to planet.user.username, planet.user %></td>
          <td><%= time_ago_in_words(planet.created_at)  %> ago</td>
          <td><%= planet.x_coord %></td>
          <td><%= planet.y_coord %></td>
          <td><%= planet.average_score %></td>
          <td><%= truncate(planet.tags.collect {|tag| tag.name }.join(', '), :length => 50) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

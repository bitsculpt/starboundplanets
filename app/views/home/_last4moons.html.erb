<%- model_class = Moon -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th><%= model_class.human_attribute_name(:biome) %></th>
      <th><%= model_class.human_attribute_name(:threat_level) %></th>
      <th>Sector</th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th>Added By</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th>X Coord</th>
      <th>Y Coord</th>
    </tr>
  </thead>
  <tbody>
    <% @moons.each do |moon| %>
      <tr>
        <td><%= link_to moon.name, moon_path(moon) %></td>
        <td><%= moon.biome %></td>
        <td><%= moon.threat_level %></td>
        <td><%= link_to moon.cluster.system.sector.name, sector_path(moon.cluster.system.sector) %></td>
        <td><%= truncate(moon.description, :length => 50) %></td>
        <td><%= moon.username %></td>
        <td><p><%= time_ago_in_words(moon.created_at)  %> ago</p> </td>
        <td><%= link_to moon.cluster.system.x_coord, system_path(moon.cluster.system) %></td>
        <td><%= link_to moon.cluster.system.y_coord, system_path(moon.cluster.system) %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
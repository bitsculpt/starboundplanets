<h1>Add A Cluster</h1>

  <% if @cluster.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@cluster.errors.count, "error") %> prohibited this issue from being saved:</h2>

        <ul>
        <% @cluster.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

<%= form_for (@cluster) do |f| %>

  <div>
    <%= f.label :name %> Example: I, II, II, IV, V, etc
    <%= f.text_field :name %>
  </div>
  <%= f.hidden_field :system_id, value: @system.id %>
  <%= f.submit 'Create Cluster' %>
<%- end -%>







<h1>Add A Moon</h1>

  <% if @moon.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@moon.errors.count, "error") %> prohibited this issue from being saved:</h2>

        <ul>
        <% @moon.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

<%= form_for (@moon) do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :biome %>
    <%= f.select :biome, SpaceJunk.biomes, :include_blank => true %>
  </div>
   <div>
    <%= f.label :threat_level %>
    <%= f.select :threat_level, SpaceJunk.threat_levels, :include_blank => true %>
  </div>

  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.hidden_field :cluster_id, value: @cluster.id %>

  <%= f.submit 'Create Moon' %>
<%- end -%>


<%- model_class = Moon -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th><%= model_class.human_attribute_name(:biome) %></th>
      <th><%= model_class.human_attribute_name(:threat_level) %></th>
      <th>Sector</th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th>Added By</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @moons.each do |moon| %>
      <tr>
        <td><%= link_to moon.cluster.name, moon_path(moon) %></td>
        <td><%= moon.biome %></td>
        <td><%= moon.threat_level %></td>
        <td><%= moon.cluster.system.sector.name %></td>
        <td><%= moon.description %></td>
        <td><%= moon.username %></td>
        <td><%=l moon.created_at %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%- model_class = Moon -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @moon.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:biome) %>:</strong></dt>
  <dd><%= @moon.biome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:threat_level) %>:</strong></dt>
  <dd><%= @moon.threat_level %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @moon.description %></dd>
  <dt><strong>X Coord:</strong></dt>
  <dd><%= @moon.cluster.system.x_coord %></dd>
  <dt><strong>Y Coord:</strong></dt>
  <dd><%= @moon.cluster.system.y_coord %></dd>
</dl>
<% if user_signed_in? and current_user.username == @moon.username %>
<%= link_to "Edit this Moon", edit_moon_path %>
<% else %>
<p> Login to your account to edit this moon ( if it belongs to you!) </p>
<% end %>

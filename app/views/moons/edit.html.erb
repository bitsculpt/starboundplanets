<h1>Editing Moon</h1>
 
<%= form_for :moon, url: moon_path(@moon), method: :patch do |f| %>
  <% if @moon.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@moon.errors.count, "error") %> prohibited
      this moon from being saved:</h2>
    <ul>
    <% @moon.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :biome %><br>
    <%= f.select :biome, SpaceJunk.biomes, :include_blank => true %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :threat_level %><br>
    <%= f.select :threat_level, SpaceJunk.threat_levels, :include_blank => true %>
    <%= f.submit %>
  </p>
<% end %>
<%= form_for @planet, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :biome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :biome, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :threat_level, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :threat_level, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cluster_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cluster_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                planets_path, :class => 'btn' %>
  </div>
<% end %>

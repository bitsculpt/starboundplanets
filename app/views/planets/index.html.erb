<div class='page-center page-down'>
  <%- model_class = Planet -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Biome</th>
      <th>Threat Level</th>
      <th>Sector</th>
      <th>Description</th>
      <th>Added By</th>
      <th>Created At</th>
      <th>X Coord</th>
      <th>Y Coord</th>
      <th>Avg. Rating</th>
    </tr>
  </thead>
  <tbody>
  <% @planets.each do |planet| %>
      <tr>
        <td><%= link_to planet.full_name, planet_path(planet) %></td>
        <td><%= planet.biome %></td>
        <td><%= planet.threat_level %></td>
        <td><%= link_to planet.sector.name, sector_path(planet.sector) %></td>
        <td><%= planet.description %></td>
        <td><%= planet.user.username %></td>
        <td><%= time_ago_in_words(planet.created_at) %> ago</td>
        <td><%= planet.x_coord %></td>
        <td><%= planet.y_coord %></td>
        <td><%= planet.average_score %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
